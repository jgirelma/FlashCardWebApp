extends layout

block content
  .page-header
    .contianer.row
      .col-6
        h3!=heading
      if title == 'Search'
        .col-6 
          form(method='POST')
            input(type='hidden', name='_csrf', value=_csrf)
            .form-group.row
              .col-8
                input.form-control(type='text', name='query', id='query', autocomplete='Search By Pack Name', placeholder='Search By Pack Name',autofocus, required)
              .col-4
                button.btn.btn-primary(type='submit') Search

  .container.pd-3
    if flashCards.length > 0
      .row
        for flashCardPack in flashCards
          a(href!=("/pack/"+flashCardPack.id))
            .card.text-center.m-3(style='width: 18rem; height: 10rem;')
              .card-body(style='display:flex; justify-content:center; align-items:center')
                h5.card-title!=flashCardPack.name
    else
      h3 No Packs Found, Search Again!
    